@model QLHOLIDAYPARTY.Models.Party
@{
    ViewBag.Title = "RSVP";
}

<h2>RSVP</h2>

<div style="margin-top: 50px">
    <h1>Register</h1>
    <form class="form-horizontal" action="/Home/Done" method="post" name="theForm" onsubmit="return(validate());">
        <div class="form-group">
            <label class="control-label col-sm-2" >Will Be Attending:</label>
            <div class="col-sm-10">
                @Html.CheckBoxFor(v => v.attendence, new {@type = "checkbox", name="attendence", onclick="check();" })
                <div id="firstNameValidate" class="invalid-feedback"></div>
            </div>
        </div>
        <div id="div2">
            <label class="control-label col-sm-1">Dec 15:</label>
            @Html.RadioButtonFor(v => v.date1,2, new {@name="date", id = "date", onclick="dateCheck();" })
            <br />
            <label class="control-label col-sm-1">Dec 16:</label>
            @Html.RadioButtonFor(v => v.date2,1, new {@name="date", id = "date1", onclick="dateCheck();" })
        </div>

        <div id="div1">
            <div class="form-group">
                <label class="control-label col-sm-2">First Name:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(v => v.firstName, new { @class = "form-control", placeholder = "Enter First Name", name = "firstName" })
                    <div id="firstNameValidate" class="invalid-feedback"></div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Last Name:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(v => v.LastName, new { @class = "form-control", placeholder = "Enter Last Name", name = "LastName" })
                    <div id="lastNameValidate" class="invalid-feedback"></div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(v => v.email, new { type = "email", @class = "form-control", placeholder = "Enter Email", name = "email" })
                    <div id="emailNameValidate" class="invalid-feedback"></div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Plus One:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(v => v.plusOne, new { @class = "form-control", placeholder = "Plus One Name", name = "plusOne" })
                    <div id="plusOneNameValidate" class="invalid-feedback"></div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button id="subButton" type="submit" class="btn btn-success">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>